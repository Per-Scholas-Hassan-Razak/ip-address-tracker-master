{
  "compilerOptions": {
    "target": "es6",                          // Modern JavaScript features
    "module": "esnext",                       // Output ES Modules (needed for <script type="module">)
    "moduleResolution": "node",              // Standard module resolution
    "rootDir": "src",                         // Your .ts files
    "outDir": "dist",                         // Your compiled .js files
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true, // Avoid case-related bugs across OSes
    "skipLibCheck": true                      // Faster builds, skip type checks in node_modules
  },
  "include": ["src"],                         // Only compile files in /src
  "exclude": ["node_modules", "dist"]         // Avoid unnecessary processing
}